<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="1sp"
    android:layout_marginBottom="5sp"
    app:cardBackgroundColor="#FAF5F5"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ifo_thumbnail"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"

            android:src="@drawable/food"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ifo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Tên món: "
                android:textColor="@color/black"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ifo_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Giá: "
                    android:textColor="#70757A" />

                <TextView
                    android:id="@+id/ifo_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Số Lượng: "
                    android:textColor="#70757A" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <android.widget.Button
            android:id="@+id/btn_giaomon"
            android:layout_width="102dp"
            android:layout_height="43dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:background="@drawable/round_button"
            android:padding="5dp"
            android:text="Giao Món"

            android:textColor="@color/white" />
        <TextView
            android:id="@+id/ifo_totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/quicksand_bold"
            android:text="Tổng tiền: "

            android:textColor="@color/color_main"
            android:textSize="20dp" />


    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_servedscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55ffffff"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="gone"
 />

</androidx.cardview.widget.CardView>
